@page
@model DomusMercatorisDotnetMVC.Pages.DashboardModel
@{
    ViewData["PageTitle"] = "Dashboard";
    Layout = "_LayoutAuth";
}
<div class="container py-4">
    <h3 class="mb-3">My Company</h3>
    <div class="row g-3">
        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-body">
                <div class="text-muted">Company Name</div>
                <div class="fs-4 fw-bold">@Model.CompanyName</div>
                    <div class="text-muted">Company ID</div>
                    <div class="fs-4 fw-bold">@Model.CompanyId</div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="text-muted">Total Products</div>
                    <div class="fs-4 fw-bold">@Model.ProductCount</div>
                    <div class="text-muted">Total Orders</div>
                    <div class="fs-4 fw-bold" id="totalOrdersCount">@Model.TotalOrders</div>
                    <div class="mt-2"><a href="/Products" class="btn btn-sm btn-outline-primary">Manage Products</a></div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="text-muted">Workers</div>
                    <div class="fs-4 fw-bold">@Model.WorkerCount</div>
                    <div class="text-muted">Managers</div>
                    <div class="fs-4 fw-bold">@Model.ManagerCount</div>
                    <div class="mt-2"><a href="/Workers" class="btn btn-sm btn-outline-primary">Manage Workers</a></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-3 mt-4">
        <!-- Recent Orders -->
        <div class="col-12 col-lg-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <span class="fw-bold"><i class="bi bi-cart me-2"></i>Recent Orders</span>
                    <a href="/Orders" class="btn btn-sm btn-outline-secondary">All Orders</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentOrders != null && Model.RecentOrders.Count > 0)
                    {
                         <ul class="list-group list-group-flush">
                            @foreach (var o in Model.RecentOrders)
                            {
                                <li class="list-group-item px-0 py-3">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <div class="fw-bold">Order #@o.Id</div>
                                            <div class="small text-muted">@o.CreatedAt.ToLocalTime().ToString("g")</div>
                                        </div>
                                        <div class="text-end">
                                            <div class="fw-bold text-success">@o.TotalPrice.ToString("C2")</div>
                                            <span class="badge bg-success">@o.Status</span>
                                        </div>
                                    </div>
                                    <div class="mt-2">
                                        @foreach(var item in o.OrderItems.Take(3))
                                        {
                                            <span class="badge bg-light text-dark border me-1">@item.Quantity x @item.ProductName</span>
                                        }
                                        @if(o.OrderItems.Count > 3) { <span class="small text-muted">+@(o.OrderItems.Count - 3) more</span> }
                                    </div>
                                </li>
                            }
                         </ul>
                    }
                    else
                    {
                        <div class="text-muted text-center py-4">No recent orders.</div>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Comments -->
        <div class="col-12 col-lg-6">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                     <span class="fw-bold"><i class="bi bi-chat-quote me-2"></i>Recent Comments</span>
                    <a asp-page="/Comments" class="btn btn-sm btn-outline-secondary">All comments</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentComments != null && Model.RecentComments.Count > 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var c in Model.RecentComments)
                            {
                                <li class="list-group-item px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <div class="fw-bold text-dark">@c.UserName</div>
                                            <div class="small text-muted">
                                                <i class="bi bi-clock me-1"></i>@c.CreatedAt.ToLocalTime().ToString("g")
                                                <br/>
                                                <a href="/Product/@c.ProductId" class="text-decoration-none fw-bold text-primary">
                                                    @c.ProductName
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="bg-light p-2 rounded border-start border-4 border-primary">
                                        <p class="mb-0 text-secondary fst-italic small">"@c.Comment"</p>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-muted text-center py-4">No recent approved comments found.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script>
        const companyId = @Model.CompanyId;
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/paymentHub")
            .configureLogging(signalR.LogLevel.Information)
            .build();

        connection.on("NewOrderReceived", (data) => {
            // Show toast
            const toastHtml = `
                <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050">
                    <div id="liveToast" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="toast-header bg-success text-white">
                            <strong class="me-auto">New Order!</strong>
                            <small>Just now</small>
                            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                        <div class="toast-body bg-white">
                            Order #${data.orderId} received.<br>
                            Amount: ${data.totalPrice} â‚º
                        </div>
                    </div>
                </div>`;
            document.body.insertAdjacentHTML('beforeend', toastHtml);

            // Update counter
            const counter = document.getElementById('totalOrdersCount');
            if(counter) {
                let current = parseInt(counter.innerText);
                if(isNaN(current)) current = 0;
                counter.innerText = current + 1;
            }

            // Reload page after delay
            setTimeout(() => location.reload(), 3000);
        });

        async function start() {
            try {
                await connection.start();
                console.log("SignalR Connected.");
                await connection.invoke("JoinCompanyGroup", companyId);
            } catch (err) {
                console.error(err);
                setTimeout(start, 5000);
            }
        };

        start();
    </script>
}
