@page
@model DomusMercatorisDotnetMVC.Pages.RefundsModel
@{
    ViewData["PageTitle"] = "Refund Requests";
    Layout = "_Layout";
}

<div class="container py-4">
    <h3>Refund Requests</h3>
    <p class="text-muted">Approve or reject customer refund requests. Rejection requires a reason.</p>

    @if (!Model.ModelState.IsValid)
    {
        <div class="alert alert-danger">Please fix the errors and try again.</div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Rejection Reason</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model.Refunds)
            {
                <tr>
                    <td>@r.ProductName</td>
                    <td>@r.Quantity</td>
                    <td>@r.RefundAmount.ToString("C")</td>
                    <td>
                        @if (r.Status == DomusMercatoris.Core.Models.RefundStatus.Pending)
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                        else if (r.Status == DomusMercatoris.Core.Models.RefundStatus.Approved)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </td>
                    <td>@(r.RejectionReason ?? "-")</td>
                    <td>
                        @if (r.Status == DomusMercatoris.Core.Models.RefundStatus.Pending)
                        {
                            <form method="post" asp-page-handler="Approve" class="d-inline">
                                <input type="hidden" name="refundId" value="@r.Id" />
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                            </form>
                            <form method="post" asp-page-handler="Reject" class="d-inline ms-2">
                                <input type="hidden" name="UpdateStatus.RefundRequestId" value="@r.Id" />
                                <input type="text" name="UpdateStatus.RejectionReason" class="form-control form-control-sm d-inline-block" style="width: 220px" placeholder="Reason (required)" />
                                <button type="submit" class="btn btn-sm btn-danger ms-2">Reject</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">No actions</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
