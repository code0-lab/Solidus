@model DomusMercatoris.Core.Entities.Product
@{
    var img = (Model.Images != null && Model.Images.Count > 0) ? Model.Images[0] : null;
}
<div class="card product-card h-100">
    <a href="/Product/@Model.Id" class="text-decoration-none">
        <div class="product-card-img-wrapper">
            @if (!string.IsNullOrEmpty(img))
            {
                <img src="@img" alt="@Model.Name" class="card-img-top product-card-img" />
            }
            else
            {
                <div class="card-img-top bg-light" style="height:200px"></div>
            }
        </div>
    </a>
    <div class="card-body" style="cursor: pointer;" onclick="toggleProductCard(this)">
        <div class="d-flex justify-content-end mb-2">
            <a href="/Product/Edit/@Model.Id" class="btn btn-sm btn-dark rounded-0 border-2 me-2" title="Edit" onclick="event.stopPropagation();">
                <i class="bi bi-pencil-square"></i>
            </a>
            <button type="button" class="btn btn-sm btn-dark rounded-0 border-2" title="Delete" onclick="event.stopPropagation(); deleteProduct(@Model.Id, event)">
                <i class="bi bi-trash"></i>
            </button>
        </div>
        <h5 class="card-title">@Model.Name</h5>
        <div class="product-details d-none">
            <div class="text-muted">@Model.Sku</div>
            <div class="fw-bold">@Model.Price</div>
            <div class="small">Qty: @Model.Quantity</div>
            <p class="card-text">@Html.Raw(Model.Description)</p>
        </div>
    </div>
</div>
