@model DomusMercatoris.Core.Entities.Product
@{
    var img = (Model.Images != null && Model.Images.Count > 0) ? Model.Images[0] : null;
}
<a href="/Product/@Model.Id" class="text-decoration-none text-reset">
    <div class="card product-card h-100">
        <div class="product-card-img-wrapper">
            @if (!string.IsNullOrEmpty(img))
            {
                <img src="@img" alt="@Model.Name" class="card-img-top product-card-img" />
            }
            else
            {
                <div class="card-img-top bg-light" style="height:200px"></div>
            }
            <div class="product-card-overlay">
                <div class="product-card-overlay-content">
                    <div class="fw-bold">@Model.Name</div>
                    <div class="small">@Model.Sku</div>
                    <div class="mt-1">@Model.Price</div>
                    <div class="mt-1 small">Qty: @Model.Quantity</div>
                    <div class="mt-2 small">@((Model.Description ?? "").Length > 120 ? (Model.Description!.Substring(0, 120) + "...") : Model.Description)</div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-end mb-2">
                <a href="/Product/Edit/@Model.Id" class="btn btn-sm btn-warning me-2" title="Edit" onclick="event.stopPropagation();">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <button type="button" class="btn btn-sm btn-danger" title="Delete" onclick="deleteProduct(@Model.Id, event)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
            <h5 class="card-title">@Model.Name</h5>
            <div class="text-muted">@Model.Sku</div>
            <div class="fw-bold">@Model.Price</div>
            <div class="small">Qty: @Model.Quantity</div>
            <p class="card-text">@((Model.Description ?? "").Length > 120 ? (Model.Description!.Substring(0, 120) + "...") : Model.Description)</p>
        </div>
    </div>
</a>
