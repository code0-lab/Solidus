@model DomusMercatorisDotnetMVC.Pages.Account.AiPanelModel

<div class="card border-0 shadow-sm mb-5">
    <div class="card-body p-4">
        <div class="d-flex align-items-center mb-4 border-bottom pb-3">
            <div class="bg-dark text-white rounded-circle p-2 d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                <i class="bi bi-robot fs-5"></i>
            </div>
            <div>
                <h5 class="card-title mb-0 fw-bold">Gemini AI Settings</h5>
                <small class="text-muted">Configure AI-powered features for your company</small>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="GeminiApiKey" class="form-label fw-bold text-uppercase small text-muted" style="letter-spacing: 0.5px;">Gemini API Key</label>
            <div class="input-group">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-key text-muted"></i></span>
                <input type="password" class="form-control border-start-0 ps-0" asp-for="GeminiApiKey" id="geminiApiKeyInput" data-real-value="@Model.ExistingGeminiApiKey" placeholder="Paste your API key here">
                <button type="button" class="btn btn-outline-secondary" id="toggleGeminiApiKey">
                    <i class="bi bi-eye"></i>
                </button>
            </div>
            <div class="form-text mt-2">
                <i class="bi bi-info-circle me-1"></i> Required for product descriptions and comment moderation.
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="CommentModerationPrompt" class="form-label fw-bold text-uppercase small text-muted" style="letter-spacing: 0.5px;">Comment Moderation Prompt</label>
            <textarea class="form-control" asp-for="CommentModerationPrompt" rows="4" placeholder="Write how Gemini should evaluate customer comments (language, tone, rules, etc.)"></textarea>
            <div class="form-text mt-2">
                <i class="bi bi-info-circle me-1"></i> This prompt will be used when analyzing comments with Gemini for managers.
            </div>
        </div>

        <div class="mb-4 p-3 bg-light rounded-3 border">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <label class="form-check-label fw-bold d-block mb-1" for="aiModerationToggle">AI Comment Moderation</label>
                    <small class="text-muted d-block" style="max-width: 80%;">
                        Automatically filter profanity and inappropriate content in new comments.
                    </small>
                </div>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="aiModerationToggle" asp-for="IsAiModerationEnabled" style="width: 3em; height: 1.5em; cursor: pointer;">
                </div>
            </div>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-dark py-2 fw-bold">
                <i class="bi bi-check-lg me-2"></i> SAVE SETTINGS
            </button>
        </div>
    </div>
</div>
<script>
    (function () {
        var input = document.getElementById('geminiApiKeyInput');
        var btn = document.getElementById('toggleGeminiApiKey');
        if (!input || !btn) return;
        var real = input.getAttribute('data-real-value') || '';
        btn.addEventListener('click', function () {
            if (input.type === 'password') {
                if (real && input.value === '*****') {
                    input.value = real;
                }
                input.type = 'text';
                btn.innerHTML = '<i class="bi bi-eye-slash"></i>';
            } else {
                if (real) {
                    input.value = '*****';
                }
                input.type = 'password';
                btn.innerHTML = '<i class="bi bi-eye"></i>';
            }
        });
    })();
</script>
