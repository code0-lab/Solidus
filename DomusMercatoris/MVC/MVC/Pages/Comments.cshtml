@page
@model DomusMercatorisDotnetMVC.Pages.CommentsModel
@{
    ViewData["PageTitle"] = "All Comments";
    Layout = "_LayoutAuth";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Products With Comments</h3>
        <a asp-page="/Dashboard" class="btn btn-sm btn-outline-secondary">Back to Dashboard</a>
    </div>

    @if (Model.Products != null && Model.Products.Count > 0)
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var p in Model.Products)
                    {
                        <a href="/Product/@p.ProductId" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-bold">@p.ProductName</div>
                                <div class="small text-muted">Product ID: @p.ProductId</div>
                            </div>
                            <span class="badge bg-primary rounded-pill">
                                @p.CommentCount comment@(p.CommentCount == 1 ? "" : "s")
                            </span>
                        </a>
                    }
                </div>
            </div>
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4" aria-label="Comments products pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                        <a class="page-link" href="/Comments?page=@(Model.PageNumber - 1)" tabindex="-1" aria-disabled="@(Model.PageNumber <= 1)">Previous</a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                            <a class="page-link" href="/Comments?page=@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="/Comments?page=@(Model.PageNumber + 1)" aria-disabled="@(Model.PageNumber >= Model.TotalPages)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="alert alert-info">Şirket ürünleriniz için henüz yorum bulunmuyor.</div>
    }
</div>
