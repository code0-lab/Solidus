@page
@model DomusMercatorisDotnetMVC.Pages.CommentsModel
@{
    ViewData["PageTitle"] = "Comment Moderation";
    Layout = "_LayoutAuth";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1">Comment Moderation</h3>
            <p class="text-muted mb-0">Manage and moderate user comments for your products.</p>
        </div>
        <a asp-page="/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <div class="card mb-4">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link @(Model.Status == null ? "active" : "")" href="/Comments">All</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.Status == 0 ? "active" : "")" href="/Comments?status=0">Pending</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.Status == 1 ? "active" : "")" href="/Comments?status=1">Approved</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.Status == 2 ? "active" : "")" href="/Comments?status=2">Rejected</a>
                </li>
            </ul>
        </div>
        <div class="card-body p-0">
            @if (Model.Comments != null && Model.Comments.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th style="width: 15%;">Date</th>
                                <th style="width: 15%;">User</th>
                                <th style="width: 15%;">Product</th>
                                <th style="width: 35%;">Comment</th>
                                <th style="width: 10%;">Status</th>
                                <th style="width: 10%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.Comments)
                            {
                                <tr>
                                    <td class="small">@c.CreatedAt.ToString("g")</td>
                                    <td>
                                        <div class="fw-bold">@c.UserName</div>
                                        <div class="small text-muted">ID: @c.UserId</div>
                                    </td>
                                    <td>
                                        <a href="/Product/@c.ProductId" target="_blank" class="text-decoration-none">
                                            @c.ProductName
                                        </a>
                                    </td>
                                    <td>
                                        <p class="mb-0 text-break" style="max-height: 100px; overflow-y: auto;">@c.Comment</p>
                                    </td>
                                    <td>
                                        @if (c.ModerationStatus == 1)
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (c.ModerationStatus == 2)
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @if (c.ModerationStatus != 1)
                                            {
                                                <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                    <input type="hidden" name="commentId" value="@c.Id" />
                                                    <input type="hidden" name="isApproved" value="true" />
                                                    <input type="hidden" name="Status" value="@Model.Status" />
                                                    <input type="hidden" name="PageNumber" value="@Model.PageNumber" />
                                                    <button type="submit" class="btn btn-success" title="Approve">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (c.ModerationStatus != 2)
                                            {
                                                <form method="post" asp-page-handler="UpdateStatus" class="d-inline ms-1">
                                                    <input type="hidden" name="commentId" value="@c.Id" />
                                                    <input type="hidden" name="isApproved" value="false" />
                                                    <input type="hidden" name="Status" value="@Model.Status" />
                                                    <input type="hidden" name="PageNumber" value="@Model.PageNumber" />
                                                    <button type="submit" class="btn btn-danger" title="Reject">
                                                        <i class="bi bi-x-lg"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <p class="lead">No comments found for this filter.</p>
                </div>
            }
        </div>
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white border-top-0 py-3">
                <nav aria-label="Comments pagination">
                    <ul class="pagination justify-content-center mb-0">
                        <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                            <a class="page-link" href="/Comments?page=@(Model.PageNumber - 1)&status=@Model.Status">Previous</a>
                        </li>
                        @for (var i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                <a class="page-link" href="/Comments?page=@i&status=@Model.Status">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="/Comments?page=@(Model.PageNumber + 1)&status=@Model.Status">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
