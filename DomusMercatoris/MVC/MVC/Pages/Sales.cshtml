@page
@model DomusMercatorisDotnetMVC.Pages.SalesModel
@{
    ViewData["Title"] = "Sales";
    Layout = "_LayoutAuth";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Sales History</h2>
    </div>

    @if (Model.Sales.Count == 0)
    {
        <div class="alert alert-info rounded-0 border-3 border-dark">
            No sales found for your company yet.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var sale in Model.Sales)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 rounded-0 border-dark border-2">
                        <div class="card-header bg-transparent border-dark border-bottom-1 rounded-0 d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Order #@sale.Id</span>
                            <small class="text-muted">@sale.CreatedAt.ToString("g")</small>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <h5 class="fw-bold mb-0">@sale.TotalPrice.ToString("C2")</h5>
                                <div class="text-muted small">
                                    @if (sale.User != null)
                                    {
                                        <span>@sale.User.FirstName @sale.User.LastName</span>
                                    }
                                    else if (sale.FleetingUser != null)
                                    {
                                        <span>@sale.FleetingUser.FirstName @sale.FleetingUser.LastName (Guest)</span>
                                    }
                                    else
                                    {
                                        <span>Unknown Customer</span>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="small text-muted fw-bold text-uppercase">Status</label>
                                <div>
                                    @if (sale.IsRefunded)
                                    {
                                        <span class="badge bg-danger rounded-0 border border-dark text-white">Refunded</span>
                                    }
                                    else if (sale.IsPaid)
                                    {
                                        <span class="badge bg-success rounded-0 border border-dark text-white">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark rounded-0 border border-dark">Pending</span>
                                    }

                                    @if (sale.CargoTracking != null)
                                    {
                                        <span class="badge bg-info text-dark rounded-0 border border-dark ms-1">@sale.CargoTracking.Status</span>
                                    }
                                </div>
                            </div>

                            <div class="mb-0">
                                <label class="small text-muted fw-bold text-uppercase">Items</label>
                                <ul class="list-unstyled mb-0 small">
                                    @foreach (var item in sale.SaleProducts.Take(3))
                                    {
                                        <li class="text-truncate">
                                            @item.Quantity x @(item.Product?.Name ?? "Unknown")
                                            @if (item.VariantProduct != null)
                                            {
                                                <span class="text-muted">(@item.VariantProduct.Color)</span>
                                            }
                                        </li>
                                    }
                                    @if (sale.SaleProducts.Count > 3)
                                    {
                                        <li class="text-muted fst-italic">+ @(sale.SaleProducts.Count - 3) more items...</li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-dark border-top-1 rounded-0 p-2">
                            <a asp-page="/SaleDetail" asp-route-id="@sale.Id" class="btn btn-dark w-100 rounded-0">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4" aria-label="Sales pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                        <a class="page-link rounded-0 text-dark" href="/Sales?page=@(Model.PageNumber - 1)" tabindex="-1" aria-disabled="@(Model.PageNumber <= 1)">Previous</a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                            <a class="page-link rounded-0 @(Model.PageNumber == i ? "bg-dark border-dark" : "text-dark")" href="/Sales?page=@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link rounded-0 text-dark" href="/Sales?page=@(Model.PageNumber + 1)" aria-disabled="@(Model.PageNumber >= Model.TotalPages)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
