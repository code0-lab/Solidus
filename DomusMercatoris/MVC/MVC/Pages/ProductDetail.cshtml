@page "/Product/{id:long}"
@model DomusMercatorisDotnetMVC.Pages.ProductDetailModel
@{
    ViewData["PageTitle"] = "Product";
    Layout = "_LayoutAuth";
}

<div class="container py-4">
    <div class="row g-4">
        <div class="col-md-6">
            @if (Model.Product != null)
            {
                var mainImg = (Model.Product.Images != null && Model.Product.Images.Count > 0) ? Model.Product.Images[0] : null;
                if (!string.IsNullOrEmpty(mainImg))
                {
                    <img id="mainImg" src="@mainImg" alt="@Model.Product.Name" class="img-fluid" style="max-height:400px; object-fit:contain; width:100%" />
                }
                else
                {
                    <div class="bg-light" style="height:300px"></div>
                }
                if (Model.Product.Images != null && Model.Product.Images.Count > 1)
                {
                    <div id="thumbs" class="mt-3 d-flex flex-wrap gap-2"></div>
                }
            }
        </div>
        <div class="col-md-6">
            @if (Model.Product != null)
            {
                <div class="d-flex align-items-start justify-content-between mb-2">
                    <h3 class="mb-0" id="productName">@Model.Product.Name</h3>
                    <div class="d-flex flex-column align-items-end gap-2">
                        <div class="d-flex gap-2">
                            <button type="button" onclick="showQr(@Model.Product.Id, '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(Model.Product.Name)', '@(Model.Product.Images != null && Model.Product.Images.Count > 0 ? Model.Product.Images[0] : "")', '@Model.Product.ShelfNumber')" class="btn btn-dark rounded-0 border-2" title="Show QR">
                                <i class="bi bi-qr-code"></i>
                            </button>
                            <a href="/Product/Edit/@Model.Product.Id" class="btn btn-dark rounded-0 border-2" title="Edit" aria-label="Edit"><i class="bi bi-pencil-square"></i></a>
                            <form id="deleteDetailForm" method="post" action="/Product/@Model.Product.Id?handler=Delete" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-dark rounded-0 border-2" title="Delete" aria-label="Delete"><i class="bi bi-trash"></i></button>
                            </form>
                        </div>
                        <a asp-page="/ManageVariants" asp-route-productId="@Model.Product.Id" class="btn btn-sm btn-info">Variants</a>
                    </div>
                </div>
                <div class="text-muted mb-2" id="productSku">@Model.Product.Sku</div>
                <div class="fs-5 fw-bold mb-3" id="productPrice">@Model.Product.Price.ToString("C2")</div>
                <div class="mb-3" id="productQuantity">Quantity: @Model.Product.Quantity</div>
                <div id="productDescription">@Html.Raw(Model.Product.Description)</div>
            }
        </div>
    </div>
    <div class="row g-4 mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Customer Comments</h5>
                </div>
                <div class="card-body">
                    @if (Model.Comments != null && Model.Comments.Count > 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var c in Model.Comments)
                            {
                                <li class="list-group-item px-0 py-3">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <div class="fw-bold text-dark">@c.UserName</div>
                                            <div class="small text-muted">
                                                <i class="bi bi-clock me-1"></i>@c.CreatedAt.ToLocalTime().ToString("g")
                                            </div>
                                        </div>
                                        @if (User.IsInRole("Manager"))
                                        {
                                            <span class="badge @(c.IsApproved ? "bg-success" : "bg-warning text-dark")">
                                                @(c.IsApproved ? "Approved" : "Pending")
                                            </span>
                                        }
                                    </div>
                                    <div class="bg-light p-3 rounded-3">
                                        <p class="mb-0 text-secondary">@c.Comment</p>
                                    </div>
                                    @if (User.IsInRole("Manager") && Model.Product != null && !c.IsApproved)
                                    {
                                        <div class="mt-2 d-flex justify-content-end">
                                            <form method="post" asp-page-handler="ApproveComment" class="d-inline">
                                                <input type="hidden" name="commentId" value="@c.Id" />
                                                <input type="hidden" name="productId" value="@Model.Product.Id" />
                                                <input type="hidden" name="pageNumber" value="@Model.PageNumber" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-success">
                                                    Approve
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-muted">No comments for this product yet.</div>
                    }
                </div>
                @if (Model.TotalPages > 1)
                {
                    <div class="card-footer bg-white border-top-0 py-3">
                        <nav aria-label="Comments pagination">
                            <ul class="pagination justify-content-center mb-0">
                                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                                    <a class="page-link" href="/Product/@(Model.Product?.Id)?page=@(Model.PageNumber - 1)">Previous</a>
                                </li>
                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                        <a class="page-link" href="/Product/@(Model.Product?.Id)?page=@i">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="/Product/@(Model.Product?.Id)?page=@(Model.PageNumber + 1)">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    (function(){
        var m = document.getElementById('mainImg');
        var t = document.getElementById('thumbs');
        
        // Base product info
        var baseProduct = {
            name: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Product?.Name ?? "")),
            sku: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Product?.Sku ?? "")),
            price: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Product?.Price.ToString("C2") ?? "")), 
            quantity: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Product?.Quantity ?? 0)),
            description: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Product?.Description ?? ""))
        };

        // Variants with formatted price
        var variants = @Html.Raw(System.Text.Json.JsonSerializer.Serialize((Model.Variants ?? new List<DomusMercatoris.Service.DTOs.VariantProductDto>()).Select(v => new {
            v.Color,
            v.Price,
            FormattedPrice = v.Price.ToString("C2"),
            v.Quantity,
            v.CoverImage,
            Images = v.Images 
        })));

        var imgs = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Product?.Images ?? new List<string>()));

        // Elements
        var elName = document.getElementById('productName');
        var elSku = document.getElementById('productSku');
        var elPrice = document.getElementById('productPrice');
        var elQty = document.getElementById('productQuantity');

        function updateDetails(imgUrl) {
            // Find variant with this cover image
            // Only check CoverImage to avoid false positives with inherited images
            var variant = variants.find(function(v) { 
                return v.CoverImage && v.CoverImage === imgUrl;
            });
            
            if (variant) {
                // Update with variant info
                if(elName) elName.innerText = baseProduct.name + ' (' + variant.Color + ')';
                // Variant might not have SKU, so we keep base SKU or hide it? 
                // User didn't specify, keeping base SKU is safer or maybe just ignore it.
                // if(elSku) elSku.innerText = variant.Sku; 
                
                if(elPrice) elPrice.innerText = variant.FormattedPrice;
                if(elQty && variant.Quantity !== undefined) elQty.innerText = 'Quantity: ' + variant.Quantity;
            } else {
                // Revert to base
                if(elName) elName.innerText = baseProduct.name;
                if(elSku) elSku.innerText = baseProduct.sku;
                if(elPrice) elPrice.innerText = baseProduct.price;
                if(elQty) elQty.innerText = 'Quantity: ' + baseProduct.quantity;
            }
        }

        function buildThumbs(current){
            if(!t) return;
            t.innerHTML = '';
            if(!Array.isArray(imgs)) return;
            imgs.forEach(function(src){
                if(src === current) return;
                var el = document.createElement('img');
                el.src = src;
                el.alt = 'thumb';
                el.style.height = '80px';
                el.style.width = '120px';
                el.style.objectFit = 'cover';
                el.style.cursor = 'pointer';
                el.addEventListener('click', function(){ showImg(src); });
                t.appendChild(el);
            });
        }
        window.showImg = function(u){ 
            if(m){ 
                m.src = u; 
                buildThumbs(u); 
                updateDetails(u);
            } 
        };
        
        // Initial check
        if(m){ 
            var currentSrc = m.getAttribute('src');
            buildThumbs(currentSrc); 
            // updateDetails(currentSrc); // Don't auto-switch on load
        }
    })();
</script>
