@page "/Product/{id:long}"
@model DomusMercatorisDotnetMVC.Pages.ProductDetailModel
@{
    ViewData["PageTitle"] = "Product";
    Layout = "_LayoutAuth";
}

<div class="container py-4">
    <div class="row g-4">
        <div class="col-md-6">
            @if (Model.Product != null)
            {
                var mainImg = (Model.Product.Images != null && Model.Product.Images.Count > 0) ? Model.Product.Images[0] : null;
                if (!string.IsNullOrEmpty(mainImg))
                {
                    <img id="mainImg" src="@mainImg" alt="@Model.Product.Name" class="img-fluid" style="max-height:400px; object-fit:contain; width:100%" />
                }
                else
                {
                    <div class="bg-light" style="height:300px"></div>
                }
                if (Model.Product.Images != null && Model.Product.Images.Count > 1)
                {
                    <div id="thumbs" class="mt-3 d-flex flex-wrap gap-2"></div>
                }
            }
        </div>
        <div class="col-md-6">
            @if (Model.Product != null)
            {
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h3 class="mb-0">@Model.Product.Name</h3>
                    <div class="d-flex gap-2">
                        <a href="/Product/Edit/@Model.Product.Id" class="btn btn-warning" title="Edit" aria-label="Edit"><i class="bi bi-pencil-square"></i></a>
                        <form id="deleteDetailForm" method="post" action="/Product/@Model.Product.Id?handler=Delete" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger" title="Delete" aria-label="Delete"><i class="bi bi-trash"></i></button>
                        </form>
                    </div>
                </div>
                <div class="text-muted mb-2">@Model.Product.Sku</div>
                <div class="fs-5 fw-bold mb-3">@Model.Product.Price</div>
                <div class="mb-3">Quantity: @Model.Product.Quantity</div>
                <p>@Model.Product.Description</p>
            }
        </div>
    </div>
</div>
<script>
    (function(){
        var m = document.getElementById('mainImg');
        var t = document.getElementById('thumbs');
        var imgs = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Product?.Images ?? new List<string>()));
        function buildThumbs(current){
            if(!t) return;
            t.innerHTML = '';
            if(!Array.isArray(imgs)) return;
            imgs.forEach(function(src){
                if(src === current) return;
                var el = document.createElement('img');
                el.src = src;
                el.alt = 'thumb';
                el.style.height = '80px';
                el.style.width = '120px';
                el.style.objectFit = 'cover';
                el.style.cursor = 'pointer';
                el.addEventListener('click', function(){ showImg(src); });
                t.appendChild(el);
            });
        }
        window.showImg = function(u){ if(m){ m.src = u; buildThumbs(u); } };
        if(m){ buildThumbs(m.getAttribute('src')); }
    })();
</script>
