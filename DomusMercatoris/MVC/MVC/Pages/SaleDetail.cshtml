@page "/Sale/{id:long}"
@model DomusMercatorisDotnetMVC.Pages.SaleDetailModel
@{
    ViewData["PageTitle"] = "Sale Detail";
    Layout = "_LayoutAuth";
}

<div class="container py-4">
    <div class="mb-4">
        <a asp-page="/Sales" class="btn btn-outline-dark rounded-0 fw-bold">&larr; Back to Sales</a>
    </div>

    @if (Model.Sale == null)
    {
        <div class="alert alert-warning rounded-0 border-3 border-dark">Sale not found or not paid yet.</div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="mb-0 fw-bold">Order #@Model.Sale.Id</h4>
                            @if (Model.Sale.IsRefunded)
                            {
                                <span class="badge bg-danger fs-6 rounded-0">Refunded</span>
                            }
                            else if (Model.Sale.IsPaid)
                            {
                                <span class="badge bg-success fs-6 rounded-0">Paid</span>
                            }
                            else
                            {
                                <span class="badge bg-warning fs-6 rounded-0 text-dark">Pending</span>
                            }
                        </div>
                        <small class="text-muted fw-bold">Placed on @Model.Sale.CreatedAt.ToString("f")</small>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th class="ps-3 py-3">Product</th>
                                    <th class="py-3">Variant</th>
                                    <th class="text-center py-3">Qty</th>
                                    <th class="text-end py-3">Price</th>
                                    <th class="text-end pe-3 py-3">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Sale.SaleProducts)
                                {
                                    <tr>
                                        <td class="ps-3">
                                            @if (item.Product != null)
                                            {
                                                <strong>@item.Product.Name</strong>
                                                <br/>
                                                <small class="text-muted">SKU: @item.Product.Sku</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Unknown Product</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.VariantProduct != null)
                                            {
                                                <span class="badge bg-light text-dark border border-dark rounded-0">@item.VariantProduct.Color</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C2")</td>
                                        <td class="text-end pe-3 fw-bold">@((item.Quantity * item.UnitPrice).ToString("C2"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="border-top-3 border-dark">
                                <tr class="fw-bold fs-5">
                                    <td colspan="4" class="text-end py-3">Grand Total:</td>
                                    <td class="text-end pe-3 py-3">@Model.Sale.TotalPrice.ToString("C2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header fw-bold">Customer Details</div>
                    <div class="card-body">
                        @if (Model.Sale.User != null)
                        {
                            <p class="mb-1 fs-5 fw-bold">@Model.Sale.User.FirstName @Model.Sale.User.LastName</p>
                            <p class="mb-1 text-muted">@Model.Sale.User.Email</p>
                            @if (!string.IsNullOrEmpty(Model.Sale.User.Phone))
                            {
                                <p class="mb-1"><strong>Phone:</strong> @Model.Sale.User.Phone</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Sale.User.Address))
                            {
                                <hr class="my-2 border-dark" />
                                <p class="mb-0"><strong>Address:</strong><br/>@Model.Sale.User.Address</p>
                            }
                        }
                        else if (Model.Sale.FleetingUser != null)
                        {
                            <p class="mb-1 text-muted">@Model.Sale.FleetingUser.Email</p>
                            @if (!string.IsNullOrEmpty(Model.Sale.FleetingUser.Address))
                            {
                                <hr class="my-2 border-dark" />
                                <p class="mb-0"><strong>Address:</strong><br/>@Model.Sale.FleetingUser.Address</p>
                            }
                        }
                        else
                        {
                            <p class="text-muted">Customer information unavailable</p>
                        }
                    </div>
                </div>

                @if (Model.Tracking != null)
                {
                    <div class="card">
                        <div class="card-header fw-bold">Cargo Tracking</div>
                        <div class="card-body">
                            <p class="mb-2"><strong>Status:</strong> <span class="badge bg-info text-dark rounded-0">@Model.Tracking.Status</span></p>
                            <p class="mb-2"><strong>Carrier:</strong> @Model.Tracking.CarrierName</p>
                            <p class="mb-0"><strong>Tracking #:</strong> <span class="font-monospace bg-light px-1 border border-dark">@Model.Tracking.TrackingNumber</span></p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0 rounded-0 border-3 border-dark">
                        No tracking information available.
                    </div>
                }
            </div>
        </div>
    }
</div>
