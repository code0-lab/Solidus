@model IEnumerable<DomusMercatoris.Core.Entities.ProductClusterMember>

<h6 class="mt-3 fw-bold text-uppercase border-bottom border-3 border-dark pb-2">Members (@Model.Count())</h6>
<div class="row g-3">
    @foreach (var member in Model)
    {
        <div class="col-6 col-md-3 col-lg-2">
            <div class="card h-100 border-3 border-dark rounded-0 shadow-sm" style="box-shadow: 4px 4px 0 #000 !important;">
                @if (member.Product.Images != null && member.Product.Images.Any())
                {
                    <img src="@member.Product.Images.First()" class="card-img-top rounded-0" style="height: 100px; object-fit: cover; border-bottom: 3px solid #000;" loading="lazy" />
                }
                else
                {
                    <div class="bg-light text-center py-4 text-muted border-bottom border-3 border-dark" style="height: 100px;">No Img</div>
                }
                <div class="card-body p-2 text-center bg-white">
                    <small class="d-block text-truncate fw-bold text-uppercase" title="@member.Product.Name">@member.Product.Name</small>
                </div>
            </div>
        </div>
    }
</div>
