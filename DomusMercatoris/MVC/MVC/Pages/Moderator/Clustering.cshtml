@page
@model DomusMercatorisDotnetMVC.Pages.Moderator.ClusteringModel
@{
    ViewData["PageTitle"] = "Manage Clusters";
    Layout = "_LayoutAuth";
}

<div class="container py-4">
    <h2>Manage Product Clusters</h2>
    
    <div class="card mb-4">
        <div class="card-header">
            <h4>Feature Extraction</h4>
        </div>
        <div class="card-body">
            <p>If you have existing products without analyzed features, click below to process them.</p>
            <form method="post" asp-page-handler="ExtractFeatures">
                <button type="submit" class="btn btn-outline-secondary">Analyze Unprocessed Products</button>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Re-Train Clusters</h4>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="Train">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Number of Clusters (K)</label>
                        <input type="number" asp-for="NumberOfClusters" class="form-control" min="2" max="100" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Start Training (New Version)</button>
                    </div>
                </div>
                <small class="text-muted">This will create a new version of clusters based on current product features.</small>
            </form>
        </div>
    </div>

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <div>
            <label class="fw-bold me-2">Select Version:</label>
            <div class="btn-group">
                @foreach (var v in Model.Versions)
                {
                    <a asp-page="./Clustering" asp-route-CurrentVersion="@v" class="btn @(Model.CurrentVersion == v ? "btn-primary" : "btn-outline-secondary")">v@(v)</a>
                }
            </div>
        </div>
        
        @if (Model.CurrentVersion.HasValue)
        {
            <form method="post" asp-page-handler="DeleteVersion" onsubmit="return confirm('Are you sure you want to delete version v@(Model.CurrentVersion)? This action cannot be undone.');">
                <input type="hidden" name="version" value="@Model.CurrentVersion" />
                <button type="submit" class="btn btn-danger">Delete v@(Model.CurrentVersion)</button>
            </form>
        }
    </div>

    @if (Model.Clusters.Any())
    {
        <div class="row">
            @foreach (var cluster in Model.Clusters)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <form method="post" asp-page-handler="Rename" class="d-flex w-100">
                                <input type="hidden" name="clusterId" value="@cluster.Id" />
                                <input type="text" name="newName" value="@cluster.Name" class="form-control me-2" />
                                <button type="submit" class="btn btn-sm btn-primary">Save</button>
                            </form>
                        </div>
                        <div class="card-body">
                            <h6>Members (@cluster.Members.Count)</h6>
                            <div class="row">
                                @foreach (var member in cluster.Members.Take(6))
                                {
                                    <div class="col-4 mb-2">
                                        @if (member.Product.Images != null && member.Product.Images.Any())
                                        {
                                            <img src="@member.Product.Images.First()" class="img-fluid rounded" style="max-height: 80px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-light text-center py-4 rounded border border-dark">No Image</div>
                                        }
                                        <div class="small text-truncate">@member.Product.Name</div>
                                    </div>
                                }
                            </div>
                            @if (cluster.Members.Count > 6)
                            {
                                <div class="text-center">
                                    <small class="text-muted">+ @(cluster.Members.Count - 6) more</small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">No clusters found for this version.</div>
    }
</div>
