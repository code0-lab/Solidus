@page
@model DomusMercatorisDotnetMVC.Pages.Moderator.AutoCategoriesModel
@{
    ViewData["PageTitle"] = "Auto Category Management";
    Layout = "_LayoutAuth";
}

<div class="container py-5">
    <h3 class="mb-4">Auto Category Management</h3>
    
    <div class="alert alert-info mb-4">
        <i class="bi bi-info-circle"></i> Auto Categories link a visual "Cluster" to a user-facing "Category Name".
    </div>

    <div class="row g-4">
        <!-- Form Column -->
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold">
                    @(Model.IsEditing ? "Edit Auto Category" : "Add New Auto Category")
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label">Category Name</label>
                            <input asp-for="Input.Name" class="form-control" placeholder="e.g. Modern Sofa" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Description" class="form-label">Description</label>
                            <textarea asp-for="Input.Description" class="form-control" rows="3" placeholder="Optional description"></textarea>
                            <span asp-validation-for="Input.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ParentId" class="form-label">Parent Category (Optional)</label>
                            <select asp-for="Input.ParentId" class="form-select">
                                <option value="">Top-level (No Parent)</option>
                                @{
                                    // Start with root categories
                                    var roots = Model.AutoCategories.Where(c => c.ParentId == null).OrderBy(c => c.Name);
                                    foreach(var root in roots)
                                    {
                                        <partial name="_AutoCategoryOption" model="root" view-data='@(new ViewDataDictionary(ViewData) { 
                                            { "Depth", 0 }, 
                                            { "AllCats", Model.AutoCategories }, 
                                            { "ExcludeId", Model.EditId },
                                            { "SelectedParentId", Model.Input.ParentId }
                                        })' />
                                    }
                                }
                            </select>
                            <span asp-validation-for="Input.ParentId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Product Clusters</label>
                            <div class="card border">
                                <div class="card-header bg-light p-2">
                                    <input type="text" id="clusterSearch" class="form-control form-control-sm" placeholder="Search clusters..." onkeyup="filterClusters()">
                                </div>
                                <div class="card-body p-0" style="height: 200px; overflow-y: auto;">
                                    <div class="list-group list-group-flush" id="clusterList">
                                        <div class="list-group-item p-2">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="0" id="cluster_0" name="Input.ProductClusterIds" 
                                                       @(Model.Input.ProductClusterIds != null && Model.Input.ProductClusterIds.Contains(0) ? "checked" : "")>
                                                <label class="form-check-label text-muted fst-italic" for="cluster_0">
                                                    -- null -- (no cluster)
                                                </label>
                                            </div>
                                        </div>
                                        @foreach (var cluster in Model.ProductClusters)
                                        {
                                            <div class="list-group-item p-2 cluster-item">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="@cluster.Id" id="cluster_@cluster.Id" name="Input.ProductClusterIds"
                                                           @(Model.Input.ProductClusterIds != null && Model.Input.ProductClusterIds.Contains(cluster.Id) ? "checked" : "")>
                                                    <label class="form-check-label" for="cluster_@cluster.Id">
                                                        @cluster.Name <span class="badge bg-light text-dark border ms-1">v@(cluster.Version)</span>
                                                    </label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="Input.ProductClusterIds" class="text-danger"></span>
                            <div class="form-text"><i class="bi bi-search"></i> Use the search box to find clusters. Multiple selections allowed.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                @(Model.IsEditing ? "Update Auto Category" : "Create Auto Category")
                            </button>
                            @if (Model.IsEditing)
                            {
                                <a href="/Moderator/AutoCategories" class="btn btn-outline-secondary">Cancel</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- List Column -->
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
                    <span>Existing Auto Categories</span>
                    <div class="d-flex align-items-center gap-2">
                         <div class="input-group input-group-sm" style="width: 200px;">
                            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search"></i></span>
                            <input type="text" id="categorySearch" class="form-control border-start-0" placeholder="Filter categories..." onkeyup="filterCategories()">
                        </div>
                        <span class="badge bg-secondary">@Model.AutoCategories.Count</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.AutoCategories.Count == 0)
                    {
                        <div class="p-4 text-center text-muted">
                            No auto categories defined yet.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">Name</th>
                                        <th>Cluster</th>
                                        <th>Created</th>
                                        <th class="text-end pe-3">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var rootItems = Model.AutoCategories.Where(c => c.ParentId == null).OrderBy(c => c.Name);
                                        foreach(var item in rootItems)
                                        {
                                            <partial name="_AutoCategoryRow" model="item" view-data='@(new ViewDataDictionary(ViewData) { { "Depth", 0 }, { "AllCats", Model.AutoCategories } })' />
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Cluster Search Filter
        function filterClusters() {
            var input = document.getElementById('clusterSearch');
            var filter = input.value.toLowerCase();
            var list = document.getElementById("clusterList");
            var items = list.getElementsByClassName('cluster-item');

            for (var i = 0; i < items.length; i++) {
                var label = items[i].querySelector("label").innerText;
                if (label.toLowerCase().indexOf(filter) > -1) {
                    items[i].style.display = "";
                } else {
                    items[i].style.display = "none";
                }
            }
        }

        // Category Table Filter (Updated for Tree)
        function filterCategories() {
            var input = document.getElementById('categorySearch');
            var filter = input.value.toLowerCase();
            var table = document.querySelector("table tbody");
            var trs = table.getElementsByTagName("tr");

            if (filter.length === 0) {
                // Reset to initial tree state
                for (var i = 0; i < trs.length; i++) {
                    var depth = trs[i].getAttribute('data-depth');
                    var btn = trs[i].querySelector('.tree-toggle i');
                    
                    // Reset icons
                    if (btn) {
                        btn.classList.remove('bi-chevron-down');
                        btn.classList.add('bi-chevron-right');
                    }
                    
                    // Reset visibility
                    if (depth && parseInt(depth) > 0) {
                        trs[i].classList.add('d-none');
                    } else {
                        trs[i].classList.remove('d-none');
                    }
                    // Remove inline style from previous filter
                    trs[i].style.display = ""; 
                }
                return;
            }

            // Flat filter mode
            for (var i = 0; i < trs.length; i++) {
                var nameCol = trs[i].getElementsByTagName("td")[0];
                if (nameCol) {
                    var txtValue = nameCol.textContent || nameCol.innerText;
                    
                    if (txtValue.toLowerCase().indexOf(filter) > -1) {
                        trs[i].classList.remove('d-none');
                        trs[i].style.display = "";
                    } else {
                        trs[i].style.display = "none";
                    }
                }       
            }
        }

        // Tree View Toggle Logic
        document.addEventListener('click', function(e) {
            var btn = e.target.closest('.tree-toggle');
            if (btn) {
                e.preventDefault();
                var rowId = btn.getAttribute('data-target');
                var icon = btn.querySelector('i');
                var isExpanded = icon.classList.contains('bi-chevron-down');
                
                if (isExpanded) {
                    // Collapse
                    icon.classList.remove('bi-chevron-down');
                    icon.classList.add('bi-chevron-right');
                    hideDescendants(rowId);
                } else {
                    // Expand
                    icon.classList.remove('bi-chevron-right');
                    icon.classList.add('bi-chevron-down');
                    showChildren(rowId);
                }
            }
        });

        function showChildren(parentId) {
            var rows = document.querySelectorAll(`tr[data-parent-id="${parentId}"]`);
            rows.forEach(row => {
                row.classList.remove('d-none');
            });
        }

        function hideDescendants(parentId) {
            var rows = document.querySelectorAll(`tr[data-parent-id="${parentId}"]`);
            rows.forEach(row => {
                row.classList.add('d-none');
                
                // Reset icon if it was expanded
                var btn = row.querySelector('.tree-toggle');
                if (btn) {
                    var icon = btn.querySelector('i');
                    if (icon.classList.contains('bi-chevron-down')) {
                        icon.classList.remove('bi-chevron-down');
                        icon.classList.add('bi-chevron-right');
                    }
                }
                
                // Recursively hide its children
                var childId = row.getAttribute('data-id');
                hideDescendants(childId);
            });
        }

        // Form Submit Loading State
        document.querySelector("form").addEventListener("submit", function(e) {
            if (!this.checkValidity()) return; // Let HTML5 validation handle it first
            
            var btn = document.getElementById("submitBtn");
            var spinner = btn.querySelector(".spinner-border");
            
            btn.disabled = true;
            spinner.classList.remove("d-none");
        });

        // Exclusive Null Checkbox Logic
        var nullCheckbox = document.getElementById('cluster_0');
        if (nullCheckbox) {
            var otherCheckboxes = document.querySelectorAll('input[name="Input.ProductClusterIds"]:not(#cluster_0)');
            
            // When "null" is checked, uncheck others
            nullCheckbox.addEventListener('change', function() {
                if(this.checked) {
                    otherCheckboxes.forEach(function(cb) { cb.checked = false; });
                }
            });

            // When others are checked, uncheck "null"
            otherCheckboxes.forEach(function(cb) {
                cb.addEventListener('change', function() {
                    if(this.checked) {
                        nullCheckbox.checked = false;
                    }
                });
            });
        }
    </script>
}
