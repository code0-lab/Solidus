@page
@model DomusMercatorisDotnetMVC.Pages.CustomersModel
@{
    ViewData["PageTitle"] = "Customers";
    Layout = "_LayoutAuth";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="mb-0">Customers</h3>
</div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Customers)
                {
                    <tr>
                        <td>@c.FirstName</td>
                        <td>@c.LastName</td>
                        <td>@c.Email</td>
                        <td>@string.Join(", ", c.Roles ?? new List<string>())</td>
                        <td>
                            @if (Model.BlockedCustomerIds.Contains(c.Id))
                            {
                                <form method="post" asp-page-handler="Unblock" asp-route-customerId="@c.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-slash-circle"></i> Unblock
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="Block" asp-route-customerId="@c.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-warning">
                                        <i class="bi bi-ban"></i> Block
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.Customers == null || Model.Customers.Count == 0)
    {
        <div class="alert alert-info">No customers found.</div>
    }

