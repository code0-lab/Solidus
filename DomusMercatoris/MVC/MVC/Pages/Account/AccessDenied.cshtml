@page
@model DomusMercatorisDotnetMVC.Pages.Account.AccessDeniedModel
@{
    ViewData["PageTitle"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="text-center col-12 col-md-8 col-lg-6">
        <div class="mb-4 text-danger">
            <i class="bi bi-shield-lock-fill display-1"></i>
        </div>
        
        <h1 class="display-4 fw-bold mb-3">Access Denied</h1>
        
        <p class="lead text-muted mb-4">
            Sorry, you don't have permission to access this page. 
            If you think this is a mistake, please contact your administrator.
        </p>
        
        <div class="d-flex justify-content-center gap-3">
            <a href="/" class="btn btn-primary btn-lg px-4">
                <i class="bi bi-house-door me-2"></i> Go Home
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-4">
                <i class="bi bi-arrow-left me-2"></i> Go Back
            </a>
        </div>
    </div>
</div>
