@page
@model DomusMercatorisDotnetMVC.Pages.Account.CompanyBannersModel
@{
    ViewData["PageTitle"] = "My Company Banners";
    Layout = "_LayoutAuth";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>My Company Banners</h3>
        <span class="badge bg-dark fs-6">@Model.CompanyName</span>
    </div>

    <div class="row g-4">
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold">
                    <ul class="nav nav-tabs card-header-tabs" id="createTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="generate-tab" data-bs-toggle="tab" data-bs-target="#generate" type="button" role="tab" aria-selected="true">Generate (AI)</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="manual-tab" data-bs-toggle="tab" data-bs-target="#manual" type="button" role="tab" aria-selected="false">Manual Create</button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <!-- AI GENERATE TAB -->
                        <div class="tab-pane fade show active" id="generate" role="tabpanel" aria-labelledby="generate-tab">
                            <form method="post" asp-page-handler="Generate">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                
                                <div class="mb-3">
                                    <label asp-for="Input.Topic" class="form-label">Banner Topic</label>
                                    <input asp-for="Input.Topic" class="form-control" placeholder="E.g., Summer Sale, New Arrival" />
                                    <span asp-validation-for="Input.Topic" class="text-danger"></span>
                                </div>
                                <div class="alert alert-info small">
                                    <i class="bi bi-info-circle"></i> Uses your company's Gemini API key.
                                </div>
                                <button type="submit" class="btn btn-dark w-100">Generate with Gemini</button>
                            </form>
                        </div>
                        
                        <!-- MANUAL CREATE TAB -->
                        <div class="tab-pane fade" id="manual" role="tabpanel" aria-labelledby="manual-tab">
                            <form method="post" asp-page-handler="ManualCreate">
                                <div class="mb-3">
                                    <label asp-for="Input.Topic" class="form-label">Topic / Title (Optional)</label>
                                    <input asp-for="Input.Topic" class="form-control" placeholder="Manual Entry" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.HtmlContent" class="form-label">HTML Content</label>
                                    <textarea asp-for="Input.HtmlContent" class="form-control font-monospace" rows="10" placeholder="Paste your HTML here..."></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Save Manual Banner</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
                    <span>Banners</span>
                    <span class="badge bg-secondary">@Model.Banners.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (Model.Banners.Count == 0)
                    {
                        <div class="p-4 text-center text-muted">
                            No banners found. Create one to get started!
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Topic</th>
                                        <th>Approved</th>
                                        <th>Active</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var b in Model.Banners)
                                    {
                                    <tr>
                                        <td>@b.Topic</td>
                                        <td>
                                            @if (b.IsApproved)
                                            {
                                                <span class="badge bg-success">Approved</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            @if (b.IsActive)
                                            {
                                                <span class="badge bg-primary">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <form method="post" asp-page-handler="UpdateStatus" class="d-inline">
                                                <input type="hidden" name="id" value="@b.Id" />
                                                @* Preserve IsApproved state, only toggle IsActive *@
                                                <input type="hidden" name="isApproved" value="@(b.IsApproved ? "true" : "false")" />
                                                <input type="hidden" name="isActive" value="@(b.IsActive ? "false" : "true")" />
                                                
                                                <button type="submit" class="btn btn-sm @(b.IsActive ? "btn-outline-secondary" : "btn-outline-success") me-1">
                                                    @(b.IsActive ? "Deactivate" : "Activate")
                                                </button>
                                            </form>
                                            
                                            <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this banner?');">
                                                <input type="hidden" name="id" value="@b.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger me-1">Delete</button>
                                            </form>
                                            
                                            <button type="button" class="btn btn-sm btn-outline-secondary"
                                                    data-bs-toggle="collapse"
                                                    data-bs-target="#bannerPreview_@b.Id"
                                                    aria-expanded="false"
                                                    aria-controls="bannerPreview_@b.Id"
                                                    onclick="loadBannerContent(@b.Id)">
                                                Edit / Preview
                                            </button>
                                        </td>
                                    </tr>
                                    <tr class="collapse" id="bannerPreview_@b.Id">
                                        <td colspan="4">
                                            <div class="border p-3 bg-light">
                                                <ul class="nav nav-tabs mb-3" id="previewTab_@b.Id" role="tablist">
                                                    <li class="nav-item" role="presentation">
                                                        <button class="nav-link active" id="view-tab-@b.Id" data-bs-toggle="tab" data-bs-target="#view-@b.Id" type="button" role="tab">Preview</button>
                                                    </li>
                                                    <li class="nav-item" role="presentation">
                                                        <button class="nav-link" id="code-tab-@b.Id" data-bs-toggle="tab" data-bs-target="#code-@b.Id" type="button" role="tab">Edit Code</button>
                                                    </li>
                                                </ul>
                                                <div class="tab-content" id="previewTabContent_@b.Id">
                                                    <div class="tab-pane fade show active" id="view-@b.Id" role="tabpanel">
                                                        <iframe id="bannerIframe_@b.Id" style="width: 100%; height: 320px; border: none; background: #fff;" loading="lazy"></iframe>
                                                    </div>
                                                    <div class="tab-pane fade" id="code-@b.Id" role="tabpanel">
                                                        <form method="post" asp-page-handler="UpdateContent">
                                                            <input type="hidden" name="Edit.Id" value="@b.Id" />
                                                            <textarea id="bannerCode_@b.Id" name="Edit.HtmlContent" class="form-control font-monospace mb-2" rows="15"></textarea>
                                                            <button type="submit" class="btn btn-primary">Save Changes</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function loadBannerContent(id) {
        var iframe = document.getElementById('bannerIframe_' + id);
        var textarea = document.getElementById('bannerCode_' + id);
        if (!iframe || iframe.getAttribute('data-loaded') === 'true') {
            return;
        }
        
        // Construct URL for the handler
        var url = new URL(window.location.href);
        url.search = ''; // Clear existing query params
        url.searchParams.set('handler', 'BannerPreview');
        url.searchParams.set('id', id);

        fetch(url.toString())
            .then(function (response) {
                if (!response.ok) {
                    throw new Error('Failed to load banner content');
                }
                return response.text();
            })
            .then(function (html) {
                // Populate Textarea
                if (textarea) textarea.value = html;

                // Populate Iframe
                var doc = iframe.contentWindow.document;
                doc.open();
                doc.write(html);
                doc.close();
                iframe.setAttribute('data-loaded', 'true');
            })
            .catch(function (error) {
                console.error('Error loading banner:', error);
                if (textarea) textarea.value = "Error loading content.";
            });
    }
</script>
