@page
@model DomusMercatorisDotnetMVC.Pages.WorkersModel
@{
    ViewData["PageTitle"] = "Workers";
    Layout = "_LayoutAuth";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="mb-0">Workers</h3>
        @if (User.IsInRole("Manager"))
        {
            <a href="/AddWorker" class="btn btn-success" title="Add Worker">
                <i class="bi bi-plus-lg"></i>
            </a>
        }
    </div>
    @if (ModelState.IsValid == false)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateEntry modelState in ModelState.Values)
                {
                    @foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <!-- Desktop View (Table) -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    @if (User.IsInRole("Manager"))
                    {
                        <th>Page Access</th>
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var w in Model.Workers)
                {
                    <tr>
                        <td>@w.FirstName</td>
                        <td>@w.LastName</td>
                        <td>@w.Email</td>
                        <td>@string.Join(", ", w.Roles ?? new List<string>())</td>
                        @if (User.IsInRole("Manager"))
                        {
                            <td>
                                <form method="post" action="/Workers?handler=UpdatePermissions" class="d-flex flex-wrap gap-2 align-items-center">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="userId" value="@w.Id" />
                                    @foreach (var key in Model.PageAccessKeys)
                                    {
                                        var hasAccess = Model.UserPageAccessMap.ContainsKey(w.Id) && Model.UserPageAccessMap[w.Id].Contains(key);
                                        <div class="form-check me-2 mb-0">
                                            <input class="form-check-input" type="checkbox" name="pageKeys" value="@key" @(hasAccess ? "checked" : null) />
                                            <label class="form-check-label">@key</label>
                                        </div>
                                    }
                                    <button class="btn btn-sm btn-outline-primary">Save</button>
                                </form>
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-sm btn-primary rounded-0" 
                                            onclick="openEditModal(@w.Id, '@w.FirstName', '@w.LastName', '@w.Email')">
                                        Edit
                                    </button>
                                    <form method="post" action="/Workers?handler=Delete" onsubmit="return confirm('Delete user?')">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="DeleteId" value="@w.Id" />
                                        <button class="btn btn-sm btn-dark rounded-0 border-2">Delete</button>
                                    </form>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile View (Cards) -->
    <div class="d-md-none">
        @foreach (var w in Model.Workers)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="card-title mb-1">@w.FirstName @w.LastName</h5>
                            <h6 class="card-subtitle text-muted small">@w.Email</h6>
                        </div>
                        <span class="badge bg-secondary">@string.Join(", ", w.Roles ?? new List<string>())</span>
                    </div>

                    @if (User.IsInRole("Manager"))
                    {
                        <hr />
                        <div class="mb-3">
                            <label class="form-label small text-uppercase text-muted fw-bold">Page Access</label>
                            <form method="post" action="/Workers?handler=UpdatePermissions">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@w.Id" />
                                <div class="d-flex flex-wrap gap-3 align-items-center">
                                    @foreach (var key in Model.PageAccessKeys)
                                    {
                                        var hasAccess = Model.UserPageAccessMap.ContainsKey(w.Id) && Model.UserPageAccessMap[w.Id].Contains(key);
                                        <div class="form-check mb-0">
                                            <input class="form-check-input" type="checkbox" name="pageKeys" value="@key" @(hasAccess ? "checked" : null) />
                                            <label class="form-check-label">@key</label>
                                        </div>
                                    }
                                    <button class="btn btn-sm btn-outline-primary ms-auto">Save</button>
                                </div>
                            </form>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-primary w-100" 
                                    onclick="openEditModal(@w.Id, '@w.FirstName', '@w.LastName', '@w.Email')">
                                Edit Details
                            </button>
                            <form method="post" action="/Workers?handler=Delete" onsubmit="return confirm('Delete user?')" class="w-100">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="DeleteId" value="@w.Id" />
                                <button class="btn btn-dark w-100">Delete</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editWorkerModal" tabindex="-1" aria-labelledby="editWorkerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editWorkerModalLabel">Edit Worker</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/Workers?handler=Update">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="editId" name="Edit.Id" />
                    <div class="mb-3">
                        <label for="editFirstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="editFirstName" name="Edit.FirstName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editLastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="editLastName" name="Edit.LastName" required>
                    </div>
                    <div class="mb-3">
                        <label for="editEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="editEmail" name="Edit.Email" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var editBtns = document.querySelectorAll('.edit-worker-btn');
        editBtns.forEach(function(btn) {
            btn.addEventListener('click', function() {
                var id = this.getAttribute('data-id');
                var firstName = this.getAttribute('data-firstname');
                var lastName = this.getAttribute('data-lastname');
                var email = this.getAttribute('data-email');
                
                document.getElementById('editId').value = id;
                document.getElementById('editFirstName').value = firstName;
                document.getElementById('editLastName').value = lastName;
                document.getElementById('editEmail').value = email;
                
                var modal = new bootstrap.Modal(document.getElementById('editWorkerModal'));
                modal.show();
            });
        });
    });
</script>
