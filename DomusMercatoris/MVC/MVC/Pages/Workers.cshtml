@page
@model DomusMercatorisDotnetMVC.Pages.WorkersModel
@{
    ViewData["PageTitle"] = "Workers";
    Layout = "_LayoutAuth";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="mb-0">Workers</h3>
        @if (User.IsInRole("Manager"))
        {
            <a href="/AddWorker" class="btn btn-success" title="Add Worker">
                <i class="bi bi-plus-lg"></i>
            </a>
        }
    </div>
    @if (ModelState.IsValid == false)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateEntry modelState in ModelState.Values)
                {
                    @foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <!-- Desktop View (Table) -->
    <div class="table-responsive d-none d-md-block">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    @if (User.IsInRole("Manager"))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var w in Model.Workers)
                {
                    <tr>
                        <td>@w.FirstName</td>
                        <td>@w.LastName</td>
                        <td>@w.Email</td>
                        <td>@string.Join(", ", w.Roles ?? new List<string>())</td>
                        @if (User.IsInRole("Manager"))
                        {
                            <td>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-sm btn-primary rounded-0 edit-worker-btn" 
                                            data-id="@w.Id" 
                                            data-firstname="@w.FirstName" 
                                            data-lastname="@w.LastName" 
                                            data-email="@w.Email">
                                        Edit
                                    </button>
                                    @if (User.IsInRole("Manager"))
                                    {
                                        var perms = Model.UserPageAccessMap.ContainsKey(w.Id) ? string.Join(",", Model.UserPageAccessMap[w.Id]) : "";
                                        <button type="button" class="btn btn-sm btn-warning rounded-0 manage-perms-btn" 
                                                data-id="@w.Id" 
                                                data-name="@w.FirstName @w.LastName"
                                                data-perms="@perms">
                                            <i class="bi bi-key-fill"></i>
                                        </button>
                                    }
                                    <form method="post" action="/Workers?handler=Delete" id="deleteForm_@w.Id">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="DeleteId" value="@w.Id" />
                                        <button type="button" class="btn btn-sm btn-dark rounded-0 border-2" onclick="confirmDelete(@w.Id, '@w.FirstName @w.LastName')">Delete</button>
                                    </form>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile View (Cards) -->
    <div class="d-md-none">
        @foreach (var w in Model.Workers)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div>
                            <h5 class="card-title mb-1">@w.FirstName @w.LastName</h5>
                            <h6 class="card-subtitle text-muted small">@w.Email</h6>
                        </div>
                        <span class="badge bg-secondary">@string.Join(", ", w.Roles ?? new List<string>())</span>
                    </div>

                    @if (User.IsInRole("Manager"))
                    {
                        <hr />
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-primary w-100 edit-worker-btn" 
                                    data-id="@w.Id" 
                                    data-firstname="@w.FirstName" 
                                    data-lastname="@w.LastName" 
                                    data-email="@w.Email">
                                Edit Details
                            </button>
                            @if (User.IsInRole("Manager"))
                            {
                                var perms = Model.UserPageAccessMap.ContainsKey(w.Id) ? string.Join(",", Model.UserPageAccessMap[w.Id]) : "";
                                <button type="button" class="btn btn-warning w-100 manage-perms-btn" 
                                        data-id="@w.Id" 
                                        data-name="@w.FirstName @w.LastName"
                                        data-perms="@perms">
                                    Permissions
                                </button>
                            }
                            <form method="post" action="/Workers?handler=Delete" onsubmit="return confirm('Delete user?')" class="w-100">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="DeleteId" value="@w.Id" />
                                <button class="btn btn-dark w-100">Delete</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Modals {
    <!-- Edit Worker Modal -->
    <div class="modal fade" id="editWorkerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content rounded-0 border-2 border-black">
                <div class="modal-header border-bottom border-black">
                    <h5 class="modal-title fw-bold">Edit Worker</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" action="/Workers?handler=Update">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <input type="hidden" name="Edit.Id" id="editId" />
                        <div class="mb-3">
                            <label class="form-label fw-bold">First Name</label>
                            <input type="text" class="form-control rounded-0 border-black" name="Edit.FirstName" id="editFirstName" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Last Name</label>
                            <input type="text" class="form-control rounded-0 border-black" name="Edit.LastName" id="editLastName" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" class="form-control rounded-0 border-black" name="Edit.Email" id="editEmail" required />
                        </div>
                    </div>
                    <div class="modal-footer border-top border-black">
                        <button type="button" class="btn btn-secondary rounded-0" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary rounded-0">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Manage Permissions Modal -->
    <div class="modal fade" id="permModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content rounded-0 border-2 border-black">
                <div class="modal-header border-bottom border-black bg-dark text-white">
                    <h5 class="modal-title fw-bold"><i class="bi bi-shield-lock-fill me-2"></i>Manage Permissions</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" action="/Workers?handler=UpdatePermissions">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="userId" id="permUserId" />
                    
                    <div class="modal-body bg-light">
                        <p class="mb-3 text-muted">Manage access rights for <span id="permUserName" class="fw-bold text-dark"></span></p>
                        
                        <div class="d-flex gap-2 mb-4">
                            <button type="button" class="btn btn-sm btn-outline-success rounded-0 fw-bold" id="btnSelectAll">
                                <i class="bi bi-check-all me-1"></i> Select All
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-danger rounded-0 fw-bold" id="btnDeselectAll">
                                <i class="bi bi-x-circle me-1"></i> Deselect All
                            </button>
                        </div>

                        <div class="row row-cols-1 row-cols-md-2 g-3">
                            @foreach (var group in DomusMercatorisDotnetMVC.Pages.WorkersModel.PermissionGroups)
                            {
                                <div class="col">
                                    <div class="card h-100 rounded-0 border-black shadow-sm">
                                        <div class="card-header fw-bold bg-white border-bottom border-black">
                                            @group.Key
                                        </div>
                                        <div class="card-body">
                                            <div class="d-flex flex-column gap-2">
                                                @foreach (var perm in group.Value)
                                                {
                                                    <div class="form-check">
                                                        <input class="form-check-input border-black perm-checkbox" type="checkbox" name="pageKeys" value="@perm.Key" id="chk_@perm.Key">
                                                        <label class="form-check-label" for="chk_@perm.Key">
                                                            @perm.Value
                                                        </label>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="modal-footer border-top border-black">
                        <button type="button" class="btn btn-secondary rounded-0" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary rounded-0 fw-bold px-4">Save Permissions</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Edit Worker Logic
        var editBtns = document.querySelectorAll('.edit-worker-btn');
        editBtns.forEach(function(btn) {
            btn.addEventListener('click', function() {
                var id = this.getAttribute('data-id');
                var firstName = this.getAttribute('data-firstname');
                var lastName = this.getAttribute('data-lastname');
                var email = this.getAttribute('data-email');
                
                document.getElementById('editId').value = id;
                document.getElementById('editFirstName').value = firstName;
                document.getElementById('editLastName').value = lastName;
                document.getElementById('editEmail').value = email;
                
                var modal = new bootstrap.Modal(document.getElementById('editWorkerModal'));
                modal.show();
            });
        });

        // Permission Management Logic
        var permBtns = document.querySelectorAll('.manage-perms-btn');
        permBtns.forEach(function(btn) {
            btn.addEventListener('click', function() {
                var id = this.getAttribute('data-id');
                var name = this.getAttribute('data-name');
                var permsStr = this.getAttribute('data-perms');
                var perms = permsStr ? permsStr.split(',') : [];

                document.getElementById('permUserId').value = id;
                document.getElementById('permUserName').innerText = name;

                // Reset all checkboxes
                document.querySelectorAll('.perm-checkbox').forEach(function(chk) {
                    chk.checked = false;
                });

                // Check active permissions
                perms.forEach(function(p) {
                    // Case insensitive check just in case
                    var chk = document.querySelector('.perm-checkbox[value="' + p + '"]');
                    if (!chk) {
                        // Try finding by lowercase if exact match fails
                         chk = Array.from(document.querySelectorAll('.perm-checkbox')).find(c => c.value.toLowerCase() === p.toLowerCase());
                    }
                    if (chk) chk.checked = true;
                });

                var modal = new bootstrap.Modal(document.getElementById('permModal'));
                modal.show();
            });
        });

        // Select All
        document.getElementById('btnSelectAll').addEventListener('click', function() {
            document.querySelectorAll('.perm-checkbox').forEach(c => c.checked = true);
        });

        // Deselect All
        document.getElementById('btnDeselectAll').addEventListener('click', function() {
            document.querySelectorAll('.perm-checkbox').forEach(c => c.checked = false);
        });
    });

    function confirmDelete(userId, userName) {
        // Check for active tasks first
        fetch('/Workers?handler=CheckUserTasks&userId=' + userId)
            .then(response => response.json())
            .then(data => {
                if (data.count > 0) {
                    if (confirm('Warning: ' + userName + ' has ' + data.count + ' active task(s). Deleting this user will also delete their assigned tasks permanently. Are you sure you want to proceed?')) {
                        document.getElementById('deleteForm_' + userId).submit();
                    }
                } else {
                    if (confirm('Are you sure you want to delete ' + userName + '?')) {
                        document.getElementById('deleteForm_' + userId).submit();
                    }
                }
            })
            .catch(error => {
                console.error('Error:', error);
                // Fallback to standard confirm if check fails
                if (confirm('Are you sure you want to delete ' + userName + '?')) {
                    document.getElementById('deleteForm_' + userId).submit();
                }
            });
    }
</script>
