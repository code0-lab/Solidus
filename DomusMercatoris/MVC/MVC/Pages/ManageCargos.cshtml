@page
@model DomusMercatorisDotnetMVC.Pages.ManageCargosModel
@{
    ViewData["Title"] = "Cargo Management";
    Layout = "_LayoutAuth";
    var isManager = User.IsInRole("Manager,User");
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Cargo Management</h3>
        <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#createCargoModal">
            <i class="bi bi-plus-lg"></i> 
        </button>
    </div>

    <!-- Search Section -->
    <div class="card border-0 shadow-sm mb-5">
        <div class="card-body p-4">
            <h5 class="card-title fw-bold mb-3">Track Cargo</h5>
            <form method="get" class="d-flex gap-2">
                <input type="text" name="TrackingNumber" class="form-control form-control-lg" placeholder="Enter Tracking Number" value="@Model.TrackingNumber" required />
                <button type="submit" class="btn btn-dark btn-lg px-4">Track</button>
            </form>
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-3 mb-0">@Model.ErrorMessage</div>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-success mb-4">@Model.Message</div>
    }

    <!-- Search Result -->
    @if (Model.SearchResult != null)
    {
        <div class="card border-0 shadow-sm mb-5">
            <div class="card-header bg-dark text-white fw-bold">
                TRACKING RESULT
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5 class="fw-bold">Tracking #: @Model.SearchResult.TrackingNumber</h5>
                        <p class="text-muted mb-0">Carrier: @Model.SearchResult.CarrierName</p>
                    </div>
                    <div class="col-md-6 text-md-end mt-3 mt-md-0">
                        <span class="badge bg-primary fs-6">@Model.SearchResult.StatusName</span>
                    </div>
                </div>
                <hr />
                <div class="row g-3">
                    <div class="col-sm-4">
                        <small class="text-muted d-block">Created</small>
                        <strong>@Model.SearchResult.CreatedAt.ToString("g")</strong>
                    </div>
                    <div class="col-sm-4">
                        <small class="text-muted d-block">Est. Delivery</small>
                        <strong>@(Model.SearchResult.EstimatedDeliveryDate?.ToString("d") ?? "N/A")</strong>
                    </div>
                    <div class="col-sm-4">
                        <small class="text-muted d-block">Delivered</small>
                        <strong>@(Model.SearchResult.DeliveredDate?.ToString("g") ?? "-")</strong>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.SearchResult.Description))
                {
                    <div class="mt-4 p-3 bg-light rounded">
                        <strong>Status Update:</strong> @Model.SearchResult.Description
                    </div>
                }
            </div>
        </div>
    }

    <!-- List Section -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="card-title fw-bold mb-3">
                @(isManager ? "All Shipments" : "My Shipments")
            </h5>
            
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Tracking #</th>
                            <th>Carrier</th>
                            <th>Status</th>
                            @if (isManager) { <th>User</th> }
                            <th>Created</th>
                            @if (isManager) { <th class="text-end">Actions</th> }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var list = isManager ? Model.Cargos : Model.MyCargos;
                        }
                        @foreach (var cargo in list)
                        {
                            <tr>
                                <td class="fw-bold">@cargo.TrackingNumber</td>
                                <td>@cargo.CarrierName</td>
                                <td>
                                    <span class="badge bg-light text-dark border">@cargo.StatusName</span>
                                </td>
                                @if (isManager)
                                {
                                    <td>@(cargo.UserName ?? "-")</td>
                                }
                                <td class="small text-muted">@cargo.CreatedAt.ToString("g")</td>
                                @if (isManager)
                                {
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-dark" 
                                                onclick="openUpdateModal('@cargo.TrackingNumber', '@cargo.Status')">
                                            Update Status
                                        </button>
                                    </td>
                                }
                            </tr>
                        }
                        @if (list.Count == 0)
                        {
                            <tr>
                                <td colspan="@(isManager ? 6 : 4)" class="text-center py-4 text-muted">
                                    No shipments found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Modals {
    <!-- Create Cargo Modal (Manager Only) -->
    <div class="modal fade" id="createCargoModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content border-0 shadow">
                    <div class="modal-header bg-dark text-white">
                        <h5 class="modal-title fw-bold">Create New Cargo</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <form method="post" asp-page-handler="Create">
                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Tracking Number</label>
                                <input asp-for="NewCargo.TrackingNumber" class="form-control" required placeholder="e.g. TRK-123456789" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Carrier Name</label>
                                <input asp-for="NewCargo.CarrierName" class="form-control" required placeholder="e.g. FedEx, UPS" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">User Email (Optional)</label>
                                <input asp-for="UserEmail" class="form-control" placeholder="Assign to user..." />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea asp-for="NewCargo.Description" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Est. Delivery Date</label>
                                <input asp-for="NewCargo.EstimatedDeliveryDate" type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-dark">Create Cargo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    <!-- Update Status Modal -->
    <div class="modal fade" id="updateStatusModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title fw-bold">Update Status</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form method="post" asp-page-handler="UpdateStatus">
                    <div class="modal-body">
                        <input type="hidden" asp-for="UpdateStatus.TrackingNumber" id="updateTrackingNumber" />
                        <div class="mb-3">
                            <label class="form-label">New Status</label>
                            <select asp-for="UpdateStatus.NewStatus" class="form-select" id="updateStatusSelect">
                                <option value="0">Pending</option>
                                <option value="1">In Transit</option>
                                <option value="2">Delivered</option>
                                <option value="3">Cancelled</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description / Note</label>
                            <textarea asp-for="UpdateStatus.Description" class="form-control" rows="3" placeholder="Status update details..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-dark">Update Status</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function openUpdateModal(trackingNumber, currentStatus) {
            document.getElementById('updateTrackingNumber').value = trackingNumber;
            var select = document.getElementById('updateStatusSelect');
            select.value = currentStatus; 
            
            var modal = new bootstrap.Modal(document.getElementById('updateStatusModal'));
            modal.show();
        }
    </script>
}
