@page
@model DomusMercatorisDotnetMVC.Pages.BrandsModel
@{
    ViewData["Title"] = "Manage Brands";
    Layout = "_LayoutAuth";
}

<div class="container py-5">
    <h3 class="mb-4">Manage Brands</h3>
    
    <div class="row g-4">
        <!-- Add Brand Form -->
        <div class="col-12 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="fw-bold mb-3 fs-5">New Brand</div>
                    <form method="post" asp-page-handler="Create">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input asp-for="NewBrand.Name" class="form-control" required placeholder="Brand Name" />
                            <span asp-validation-for="NewBrand.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea asp-for="NewBrand.Description" class="form-control" rows="3" placeholder="Description (optional)"></textarea>
                        </div>
                        <button type="submit" class="btn btn-dark w-100">Add Brand</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Brands List -->
        <div class="col-12 col-lg-8">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="fw-bold mb-3 fs-5">Existing Brands</div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th class="text-end" style="width: 120px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var brand in Model.Brands)
                                {
                                    <tr>
                                        <td class="fw-bold">@brand.Name</td>
                                        <td class="text-muted small">@brand.Description</td>
                                        <td class="text-end">
                                            <button type="button" 
                                                    class="btn btn-sm btn-outline-dark rounded-0 border-2 me-1" 
                                                    data-id="@brand.Id"
                                                    data-name="@brand.Name"
                                                    data-description="@brand.Description"
                                                    onclick="openEditModal(this)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@brand.Id" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this brand?');">
                                                <button type="submit" class="btn btn-sm btn-dark rounded-0 border-2">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                @if (Model.Brands.Count == 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4 text-muted">
                                            No brands found. Add one to get started.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Modals {
    <!-- Edit Modal -->
    <div class="modal fade" id="editBrandModal" tabindex="-1" aria-labelledby="editBrandModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content border-0 shadow">
                <div class="modal-header">
                    <h5 class="modal-title" id="editBrandModalLabel">Edit Brand</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-page-handler="Update">
                    <div class="modal-body">
                        <input type="hidden" asp-for="UpdateBrand.Id" id="editBrandId" />
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input asp-for="UpdateBrand.Name" id="editBrandName" class="form-control" required />
                            <span asp-validation-for="UpdateBrand.Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea asp-for="UpdateBrand.Description" id="editBrandDescription" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-dark">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function openEditModal(btn) {
            var id = btn.getAttribute('data-id');
            var name = btn.getAttribute('data-name');
            var description = btn.getAttribute('data-description');

            document.getElementById('editBrandId').value = id;
            document.getElementById('editBrandName').value = name;
            document.getElementById('editBrandDescription').value = description || '';
            
            var modal = new bootstrap.Modal(document.getElementById('editBrandModal'));
            modal.show();
        }
    </script>
}
